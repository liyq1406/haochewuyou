<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_60dp"
        android:background="@color/promote_white"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_coupon_usage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/icon_coupon_explain"
            android:drawablePadding="@dimen/px_5dp"
            android:gravity="center"
            android:text="@string/hc_coupon_usage"/>
    </LinearLayout>

    <com.haoche51.custom.HCPullToRefresh
        android:id="@+id/hcptr_choose_coupon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top_line_gray"
        android:padding="@dimen/coupon_leftright">

        <TextView
            android:id="@+id/tv_coupon_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/hc_no_choose_coupon"
            android:textColor="@color/font_black"
            />

        <TextView
            android:id="@+id/tv_use_coupon_now"
            style="@style/wh_w_w"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_rect_gray"
            android:padding="@dimen/px_10dp"
            android:text="@string/hc_use_now"
            />
    </RelativeLayout>

</LinearLayout>