<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/wh_match"
    android:orientation="vertical"
    android:gravity="center"
    >

  <include layout="@layout/activity_loading"/>

  <FrameLayout
      style="@style/wh_match"
      >

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_book_empty"
        android:text="@string/hc_no_booking"
        android:drawablePadding="@dimen/px_15dp"
        android:drawableTop="@drawable/icon_empty_car"
        android:layout_gravity="center"
        style="@style/wh_wrap"
        />

    <com.haoche51.custom.HCPullToRefresh
        android:id="@+id/hcptr_book"
        style="@style/wh_match"
        />

  </FrameLayout>
</LinearLayout>