<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/promote_white"
              android:orientation="vertical"
    >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/px_40dp"
        android:src="@drawable/icon_cute_vehicle"
        />

    <TextView
        android:id="@+id/tv_intro_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-20dp"
        android:gravity="center"
        android:text="@string/hc_coupon_intro"/>

    <Button
        android:id="@+id/btn_known"
        style="@style/wh_w_w"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/px_20dp"
        android:layout_marginTop="@dimen/px_40dp"
        android:background="@drawable/selector_rect_red"
        android:padding="@dimen/px_10dp"
        android:text="@string/hc_i_known"
        />

</LinearLayout>