<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/filter_bar_height"
    android:background="@drawable/bg_bottom_line_light_gray"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

  <RelativeLayout
      android:id="@+id/rel_filterbar_sort"
      style="@style/filter_bar_rel_style"
      >

    <TextView
        android:id="@+id/tv_filterbar_sort"
        style="@style/filter_bar_tv_style"
        android:text="@string/hc_sort"
        />
  </RelativeLayout>

  <View
      android:layout_width="@dimen/px_05"
      android:layout_height="@dimen/px_14dp"
      android:background="@color/diff_deep_gray_"
      />

  <RelativeLayout
      android:id="@+id/rel_filterbar_brand"
      style="@style/filter_bar_rel_style"
      >

    <TextView
        android:id="@+id/tv_filterbar_brand"
        style="@style/filter_bar_tv_style"
        android:text="@string/hc_brand"
        />
  </RelativeLayout>


  <View
      android:layout_width="@dimen/px_05"
      android:layout_height="@dimen/px_14dp"
      android:background="@color/diff_deep_gray_"
      />


  <RelativeLayout
      android:id="@+id/rel_filterbar_price"
      style="@style/filter_bar_rel_style"
      >

    <TextView
        android:id="@+id/tv_filterbar_price"
        style="@style/filter_bar_tv_style"
        android:text="@string/hc_price"
        />

  </RelativeLayout>

  <View
      android:layout_width="@dimen/px_05"
      android:layout_height="@dimen/px_14dp"
      android:background="@color/diff_deep_gray_"
      />

  <RelativeLayout
      android:id="@+id/rel_filterbar_detail"
      style="@style/filter_bar_rel_style"
      >

    <TextView
        android:id="@+id/tv_filterbar_detail"
        style="@style/filter_bar_tv_style"
        android:text="@string/hc_filter"
        android:drawableRight="@drawable/icon_filter"
        />

  </RelativeLayout>

</LinearLayout>