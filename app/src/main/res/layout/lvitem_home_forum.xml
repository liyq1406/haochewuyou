<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_forum_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/promote_white"
    >

  <ImageView
      android:id="@+id/iv_head_line"
      android:layout_width="@dimen/px_80dp"
      android:layout_height="@dimen/px_80dp"
      android:layout_alignParentRight="true"
      android:contentDescription="@null"
      android:layout_marginRight="@dimen/px_20dp"
      android:src="@drawable/default_template"
      android:scaleType="centerCrop"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_toLeftOf="@id/iv_head_line"
      android:layout_alignBottom="@id/iv_head_line"
      android:layout_alignTop="@id/iv_head_line"
      android:layout_marginLeft="@dimen/px_20dp"
      android:paddingRight="@dimen/px_15dp"
      android:paddingLeft="@dimen/px_15dp"
      android:gravity="center_vertical"
      android:orientation="vertical"
      android:background="@color/home_hot_normal"
      >
    <TextView
        android:id="@+id/tv_head_line_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/px_3dp"
        android:textSize="@dimen/ip5_34px"
        android:textColor="@color/home_hot_text"
        android:maxLines="2"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/tv_head_line_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_3dp"
        android:textSize="@dimen/ip5_20px"
        android:textColor="@color/home_hot"
        />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/iv_head_line"
      android:orientation="vertical"
      >
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_5dp"
        />
    <View
        android:id="@+id/home_forum_bottom1"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_15dp"
        />
    <View
        android:id="@+id/home_forum_bottom2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_10dp"
        android:background="@color/home_hot_normal"
        />
  </LinearLayout>
</RelativeLayout>