<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/wh_match"
    android:background="@color/promote_white"
    >

  <ImageView
      android:id="@+id/iv_splash_core_bg"
      style="@style/wh_match"
      android:scaleType="centerCrop"
      />

  <FrameLayout
      android:id="@+id/frame_bottom"
      style="@style/wh_match_wrap"
      android:background="@color/promote_white"
      android:layout_gravity="center_horizontal|bottom"
      >

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/iv_splash_bottom_bg"
        style="@style/wh_wrap"
        android:src="@drawable/bg_splash_bottom_default"
        />

  </FrameLayout>

  <TextView
      android:visibility="gone"
      android:id="@+id/tv_splash_jump"
      android:padding="@dimen/px_7dp"
      android:text="@string/hc_jump_it"
      android:background="@drawable/bg_for_splash_jump"
      android:layout_gravity="top|right"
      android:layout_margin="@dimen/px_10dp"
      style="@style/wh_w_w"
      />

</FrameLayout>  