<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_home_new_arrival"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_62dp"
    android:gravity="center_vertical"
    android:background="@drawable/bg_home_repeat"
    >

  <ImageView
      android:id="@+id/iv_home_new_arrival_left"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginLeft="@dimen/px_20dp"
      android:src="@drawable/icon_home_new_arrival"
      />

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:gravity="center_vertical"
      android:layout_marginLeft="@dimen/px_25dp"
      android:layout_toRightOf="@id/iv_home_new_arrival_left"
      >
    <TextView
        android:id="@+id/iv_home_new_arrival_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/home_grx_red"
        android:text="000"
        android:textSize="40sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/home_hot"
        android:layout_toRightOf="@id/iv_home_new_arrival_count"
        android:layout_alignBottom="@id/iv_home_new_arrival_count"
        android:layout_marginBottom="@dimen/px_8dp"
        android:textSize="14sp"
        android:text="@string/hc_home_arrival_count"
        />
  </RelativeLayout>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_alignParentRight="true"
      android:text="@string/hc_home_arrival_see"
      android:gravity="center"
      android:textColor="@color/home_hot_text"
      android:drawableRight="@drawable/icon_red_right"
      android:drawablePadding="@dimen/px_5dp"
      android:layout_marginRight="@dimen/px_20dp"
      android:textSize="@dimen/ip5_24px"
      />

</RelativeLayout>