<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/wh_match_wrap"
    android:background="@color/promote_white"
    android:clickable="true"
    android:orientation="vertical"
    >

  <RelativeLayout
      android:id="@+id/rel_chhitem"
      android:background="@drawable/selector_vehicle_story"
      android:descendantFocusability="blocksDescendants"
      style="@style/wh_match_wrap"
      >

    <ImageView
        android:id="@+id/iv_chitem_big"
        style="@style/wh_wrap"
        android:contentDescription="@null"
        />

    <ImageView
        android:id="@+id/iv_chitem_righttop"
        style="@style/wh_wrap"
        android:layout_alignTop="@id/iv_chitem_big"
        android:layout_toRightOf="@id/iv_chitem_big"
        android:contentDescription="@null"
        />

    <ImageView
        android:id="@+id/iv_chitem_rightbottom"
        style="@style/wh_wrap"
        android:layout_below="@id/iv_chitem_righttop"
        android:layout_toRightOf="@id/iv_chitem_big"
        android:contentDescription="@null"
        />
  </RelativeLayout>

  <RelativeLayout
      android:layout_marginBottom="@dimen/px_5dp"
      android:layout_width="match_parent"
      android:minHeight="@dimen/px_80dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/dp_20px"
      android:layout_marginRight="@dimen/dp_20px"
      >

    <TextView
        android:id="@+id/tv_chitem_car_name"
        style="@style/wh_match_wrap"
        android:layout_alignParentTop="true"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:textColor="@color/promote_black"
        android:textSize="@dimen/font_vehicle_name"
        />

    <TextView
        android:id="@+id/tv_chitem_vehicle_detail"
        style="@style/wh_wrap"
        android:layout_below="@id/tv_chitem_car_name"
        android:layout_marginTop="3dp"
        android:textColor="@color/font_detail_gray"
        android:textSize="@dimen/font_normal"
        />

    <TextView
        android:id="@+id/tv_chitem_vehicle_price"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:textSize="@dimen/font_vehicle_price"
        style="@style/wh_wrap"
        />
  </RelativeLayout>

  <View
      android:id="@+id/view_for_bottom"
      android:layout_width="match_parent"
      android:layout_height="@dimen/home_shadow_high"
      android:background="@color/self_common"
      />

</LinearLayout>