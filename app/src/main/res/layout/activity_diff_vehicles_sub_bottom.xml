<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_diff_bottom"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@drawable/bg_top_line_gray"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="horizontal"
    android:visibility="gone"
    >

  <RelativeLayout
      android:id="@+id/rel_diff_left"
      style="@style/hc_ddetail_rel"
      android:layout_marginRight="10dp"
      >

    <LinearLayout
        android:id="@+id/linear_diff_left"
        style="@style/hc_ddetail_linear"
        android:layout_alignParentRight="true"
        >

      <ImageView
          android:id="@+id/iv_diff_left"
          style="@style/hc_ddetail_iv"
          android:contentDescription="@null"
          />
    </LinearLayout>

    <Button
        android:layout_marginLeft="@dimen/px_5dp"
        android:layout_marginTop="@dimen/px_5dp"
        android:layout_marginBottom="@dimen/px_5dp"
        android:id="@+id/btn_diff_left"
        style="@style/hc_ddetail_btn"
        android:layout_toLeftOf="@id/linear_diff_left"
        />
  </RelativeLayout>

  <View
      android:layout_width="1px"
      android:layout_height="wrap_content"
      android:background="@color/gray_line"
      />

  <RelativeLayout
      android:id="@+id/rel_diff_right"
      style="@style/hc_ddetail_rel"
      android:layout_marginLeft="10dp"
      >

    <LinearLayout
        android:id="@+id/linear_diff_right"
        style="@style/hc_ddetail_linear"
        android:layout_alignParentLeft="true"
        >

      <ImageView
          android:id="@+id/iv_diff_right"
          style="@style/hc_ddetail_iv"
          android:contentDescription="@null"
          />
    </LinearLayout>

    <Button
        android:layout_marginRight="@dimen/px_5dp"
        android:layout_marginTop="@dimen/px_5dp"
        android:layout_marginBottom="@dimen/px_5dp"
        android:id="@+id/btn_diff_right"
        style="@style/hc_ddetail_btn"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/linear_diff_right"
        />
  </RelativeLayout>

</LinearLayout>