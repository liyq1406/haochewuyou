            <TextView
                style="@style/sell_vehicle_bottom00_text_small"
                android:text="@string/hc_sell_process_four02" />

            <TextView style="@style/sell_vehicle_bottom00_text_small" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>