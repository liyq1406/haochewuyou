                android:text="@string/hc_sell_process_three03" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_26dp">

        <LinearLayout
            android:layout_width="@dimen/px_0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/px_15dp"
                android:layout_height="@dimen/px_10dp"
                android:src="@drawable/sell_vehicle_process_arrows" />
        </LinearLayout>

        <TextView style="@style/sell_vehicle_bottom00_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            style="@style/sell_vehicle_bottom00_image_big"
            android:src="@drawable/sell_vehicle_process_image_04" />

        <LinearLayout
