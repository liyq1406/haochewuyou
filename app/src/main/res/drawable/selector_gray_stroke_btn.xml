<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/px_5dp"/>

            <stroke android:width="@dimen/px_05" android:color="@color/gray_line"/>

            <solid android:color="@color/promote_white"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/px_5dp"/>

            <stroke android:width="@dimen/px_05" android:color="@color/gray_line"/>

            <solid android:color="@color/promote_gray"/>
        </shape>
    </item>

</selector>